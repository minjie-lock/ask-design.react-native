{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-native",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "main.tsx",
  ]
}